<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74F6F9FA"
    tools:context=".messagesFragment">


    <TextView
        android:id="@+id/messages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:background="#FBFCFD"
        android:fontFamily="@font/quicksand"
        android:text="Messages"
        android:textColor="#07080C"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/private_m_button"
        android:layout_width="264dp"
        android:layout_height="114dp"
        android:layout_marginTop="32dp"
        android:text="Go to Private message "
        app:backgroundTint="#9C27B0"
        app:layout_constraintTop_toBottomOf="@+id/messages_title"
        tools:layout_editor_absoluteX="76dp" />
</androidx.constraintlayout.widget.ConstraintLayout>